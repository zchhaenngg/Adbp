@{
    ViewBag.Title = "Index";
    ViewBag.ActiveMenu = ZeroPageNames.Localization;
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb adbp-breadcrumb-background">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Language</li>
    </ol>
</nav>
<div class="card adbp-background">
    <div class="card-body">
        <div class="bd-highlight adbp-toolbar">
            <div class="float-left">
                <div class="input-group">
                    <button id="btn-localization_edit" type="button" class="btn btn-outline-info adbp-toolbar-btn" data-toggle="modal" data-target="#modal-localization_edit" title="编辑" disabled="disabled">
                        <i class="fas fa-pencil-alt fa-sm"></i>
                    </button>
                </div>
            </div>
            <div class="float-right">
                <div class="input-group">
                    <input id="table-localizations_search" type="text" class="form-control" placeholder="search">
                </div>
            </div>
        </div>
        <table id="table-localizations" class="display">
            <thead>
                <tr>
                    <th></th>
                    <th>Source</th>
                    <th>Name</th>
                    <th>en-US</th>
                    <th>zh-Hans</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div class="modal fade" id="modal-localization_edit" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form action="api/services/app/applicationLanguageText/update" data-dt="#table-localizations">
                <input type="hidden" name="Id" />
                <div class="modal-header">
                    <h5 class="modal-title">
                        <span>编辑</span>
                    </h5>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Source</label>
                        <div class="col-sm-10">
                            <input type="text" name="Source" readonly class="form-control-plaintext">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" name="Name" readonly class="form-control-plaintext">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label adbp-mask">EnValue</label>
                        <div class="col-sm-10">
                            <input type="text" name="EnValue" data-vd="{name:'EnValue', r:true, maxL:1000}" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">ZhValue</label>
                        <div class="col-sm-10">
                            <input type="text" name="ZhValue" data-vd="{name:'ZhValue', r:true, maxL:1000}" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@L("Cancel")</button>
                    <button type="button" class="btn btn-primary adbp-formSubmit">@L("Save")</button>
                </div>
            </form>

        </div>
    </div>
</div>
@section scripts {
    @Html.IncludeScript("~/ES6/ZeroLocalization/Index.js")
}