@using CompanyName.ProjectName
@using Adbp.Zero.MVC.Models.Account
@model LoginFormViewModel
@{
    ViewBag.Title = "Login";
}
<style>
    html,
    body {
        height: 100%;
        position: relative;
        background-color: #00485E;
    }

    .loginCard {
        max-width: 500px;
        margin: auto;
        margin-top: 150px;
        padding: 1.5rem;
        border-width: .2rem;
        background-color: white;
    }

    .loginCard-header .brand {
        font-size: 2rem;
    }

    .loginCard-header {
        height: 70px;
        text-align: center;
    }


    .loginCard-footer {
        text-align: center;
    }
</style>
<div class="loginCard">
    <div class="loginCard-header">
        <div class="brand">ADBP</div>
        @if (ViewBag.IsMultiTenancyEnabled)
        {
            @Html.Action("TenantChange", "Account")
        }
    </div>
    <div class="loginCard-body">
        <form id="login-form" method="post" action="/ZeroAccount/Login">
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
            <hr />

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">UserName</label>
                <div class="col-sm-10">
                    <input type="text" name="UsernameOrEmailAddress" data-vd="{name:'Username', r:true, maxL:100}" class="form-control" aria-describedby="emailHelp" placeholder="@L("UserNameOrEmail")">
                </div>
                <div class="col-sm-12">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input name="Password" type="password" class="form-control" placeholder="@L("Password")">
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10 ">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" name="RememberMe" value="true" id="rememberme">
                        <label class="custom-control-label" for="rememberme">@L("RememberMe")</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <button type="submit" class="btn btn-primary" style="background-color: #00485E;">@L("LogIn")</button>
                </div>
            </div>
        </form>
    </div>
    <div class="loginCard-footer">
        <small>&copy; @DateTime.Now.Year ProjectName. <b>Version </b> @AppVersionHelper.Version [@AppVersionHelper.ReleaseDate.ToString("yyyyMMdd")]</small>
    </div>
</div>
@section scripts {
    <script type="text/javascript">
    $("#login-form").abpAjaxForm();
    </script>
}
