@{
    ViewBag.Title = "Index";
    ViewBag.ActiveMenu = SamplePageNames.Contacts;
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb adbp-breadcrumb-background">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Contacts</li>
    </ol>
</nav>
<div class="card adbp-background">
    <div class="card-body">
        <div class="bd-highlight adbp-toolbar">
            <div class="float-left">
                <div class="input-group">
                    <button type="button" class="btn btn-outline-info adbp-toolbar-btn" data-toggle="modal" data-target="#modal-contact_create" title="创建">
                        <i class="fas fa-plus fa-sm"></i>
                    </button>
                    <button id="btn-contactIndex_edit" type="button" class="btn btn-outline-info adbp-toolbar-btn" data-toggle="modal" data-target="#modal-contact_edit" title="编辑" disabled="disabled">
                        <i class="fas fa-pencil-alt fa-sm"></i>
                    </button>
                    <button id="btn-contactIndex_delete" type="button" class="btn btn-outline-info adbp-toolbar-btn" title="删除" disabled="disabled">
                        <i class="fas fa-trash-alt fa-sm"></i>
                    </button>
                </div>
            </div>
            <div class="float-right">
                <div class="input-group">
                    <input id="table-search" type="text" class="form-control" placeholder="search">
                </div>
            </div>
        </div>
        <table id="contactIndex-table" class="display">
            <thead>
                <tr>
                    <th></th>
                    <th>姓名</th>
                    <th>性别</th>
                    <th>手机</th>
                    <th>邮箱</th>
                    <th>创建时间</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div class="modal fade" id="modal-contact_create" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form action="api/services/app/contact/createContact" data-dt="#contactIndex-table">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <span>创建联系人</span>
                    </h5>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label adbp-mask">Contact Name</label>
                        <div class="col-sm-10">
                            <input type="text" name="Name" data-vd="{name:'Contact Name', r:true, minL:2, maxL:50}" class="form-control" placeholder="Contact Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-10">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="IsFemale" value="false" id="IsFemale_1_1">
                                <label class="form-check-label" for="IsFemale_1_1">男</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="IsFemale" value="true" id="IsFemale_1_2">
                                <label class="form-check-label" for="IsFemale_1_2">女</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Telephone</label>
                        <div class="col-sm-10">
                            <input type="text" name="Telephone" class="form-control" data-vd="{name:'Telephone', r:false, bReg:'telephone'}" placeholder="Telephone">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="text" name="Email" class="form-control" data-vd="{name:'Email', r:false, maxL:255}" placeholder="Email">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@L("Cancel")</button>
                    <button type="button" class="btn btn-primary adbp-formSubmit">@L("Save")</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-contact_edit" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form action="api/services/app/contact/updateContact" data-dt="#contactIndex-table">
                <input type="hidden" name="Id" />
                <div class="modal-header">
                    <h5 class="modal-title">
                        <span>编辑联系人</span>
                    </h5>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label adbp-mask">Contact Name</label>
                        <div class="col-sm-10">
                            <input type="text" name="Name" data-vd="{name:'Contact Name', r:true, minL:2, maxL:50}" class="form-control" placeholder="Contact Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-10">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="IsFemale" value="false" id="IsFemale_2_1">
                                <label class="form-check-label" for="IsFemale_2_1">男</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="IsFemale" value="true" id="IsFemale_2_2">
                                <label class="form-check-label" for="IsFemale_2_2">女</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Telephone</label>
                        <div class="col-sm-10">
                            <input type="text" name="Telephone" class="form-control" data-vd="{name:'Telephone', r:false, bReg:'telephone'}" placeholder="Telephone">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="text" name="Email" class="form-control" data-vd="{name:'Email', r:false, maxL:255}" placeholder="Email">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@L("Cancel")</button>
                    <button type="button" class="btn btn-primary adbp-formSubmit">@L("Save")</button>
                </div>
            </form>

        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript">
        (function () {

            window.table = new abp.table.server("#contactIndex-table", {
                "order": [[3, "desc"]],
                'ajax': {
                    url: '/contacts/GetContacts',
                    data: function (params) {
                        params.search.value = $("#table-search").val();
                        return params;
                    }
                },
                columns: [
                    {
                        render: function (data, type, full, meta) {
                            return '';
                        }
                    },
                    { data: 'Name' },
                    {
                        data: 'IsFemale', render: function (data, type, full, meta) {
                            if (data == null) {
                                return "";
                            }
                            else if (data) {
                                return abp.localization.localize("BOOL_ISFEMALE_TRUE", "Sample");
                            }
                            else {
                                return abp.localization.localize("BOOL_ISFEMALE_FALSE", "Sample");
                            }
                        }
                    },
                    { data: 'Telephone' },
                    { data: 'Email' },
                    {
                        data: 'CreationTime', render: function (data, type, full, meta) {
                            return abp.timing.datetimeStr(data);
                        }
                    },
                ]
            }).contact(["draw.dt", "select.dt", "deselect.dt"], "#btn-contactIndex_edit", function (e, dt, type, indexes) {
                if (dt.isSingleSelected()) {
                    $(this).removeAttr("disabled");
                }
                else {
                    $(this).attr("disabled", true);
                }
                }).contact(["draw.dt", "select.dt", "deselect.dt"], "#btn-contactIndex_delete", function (e, dt, type, indexes) {
                if (dt.isSingleSelected()) {
                    if (!dt.singleSelected().isStatic) {
                        $(this).removeAttr("disabled");
                    }
                    else {
                        $(this).attr("disabled", true);
                    }
                }
                else {
                    $(this).attr("disabled", true);
                }
            });
            table.show();

            $('#table-search').on('change', function () {
                table.show();
            });

            function initEditModal({ Id, Name, IsFemale, Telephone, Email }) {
                let $form = $("#modal-contact_edit").find("form");
                $form.resetForm();
                $form.find("[name=Id]").val(Id);
                $form.find("[name=Name]").val(Name);
                if (IsFemale === true) {
                    $("input[name=IsFemale][value='true']").prop("checked", true);
                }
                else if (IsFemale === false) {
                    $("input[name=IsFemale][value='false']").prop("checked", true);
                }
                
                $form.find("[name=Telephone]").val(Telephone);
                $form.find("[name=Email]").val(Email);
            }

            $("#modal-contact_edit").on("show.bs.modal", function () {
                var row = window.table.singleSelected();
                initEditModal(row);
            });

            $("#btn-contactIndex_delete").on("click", function () {
                abp.message.confirm('', "确认删除联系人！").done((value) => {
                    if (value) {
                        var row = window.table.singleSelected();
                        abp.services.app.contact.delete(row.Id).done(function () {
                            abp.notify.success("操作成功！");
                            table.show();
                        });
                    }
                })
            });
        })();
    </script>
}
